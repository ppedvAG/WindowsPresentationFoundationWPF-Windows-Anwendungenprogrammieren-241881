<UserControl x:Class="M000.View.UserControls.IntegerUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M000"
			 Name="Self">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="{Binding ElementName=Self, Path=Height}"/>
		</Grid.ColumnDefinitions>
		<TextBox Text="{Binding ElementName=Self, Path=Number}"/>
		<StackPanel Grid.Column="1">
			<Button Content="&#11205;" Click="Button_Click" FontSize="6" Width="20"/>
			<Button Content="&#11206;" Click="Button_Click_1" FontSize="6" Width="20"/>
		</StackPanel>
	</Grid>
</UserControl>
